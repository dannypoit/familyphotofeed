<div class="form-reg">
  <h2 class="mb-4">Edit user info</h2>

    <%= simple_form_for @user do |f| %>
    <div class="text-left">
      <%= f.input :firstname,
                  label: 'First name' %>
      <%= f.input :lastname,
                  label: 'Last name' %>
      <%= f.input :email,
                  label: 'E-mail' %>
    </div>
      <%= f.button :submit, 'Update', class: 'btn btn-green btn-300 my-4' %>
    <% end %>

  <%= link_to 'Cancel', user_path, class: 'btn btn-outline-blue btn-sm mt-3' %>
</div>
