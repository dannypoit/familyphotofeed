<div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-4 offset-md-4 card form">
  <h2>Edit user info</h2>

  <br />

  <%= simple_form_for @user do |f| %>
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :email %>
    <%= f.submit 'Update', class: 'green-btn' %>
  <% end %>

  <%= link_to 'Back', user_path %>
</div>
