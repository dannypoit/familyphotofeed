<div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3 card form">
  <h2>Edit Post</h2>

  <br />

  <%= simple_form_for @post do |f| %>
    <%= f.input :photo %>
    <%= f.input :caption %>
    <%= f.submit 'Update', class: 'green-btn' %>
  <% end %>

  <%= link_to 'Back', posts_path %>
</div>
