<div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-4 offset-md-4 card form">

<h1>Upload</h1>

<br />

<%= simple_form_for @post do |f| %>
  <%= f.input :photo %>
  <%= f.input :caption %>
  <%= f.submit 'Post', class: 'btn btn-green d-inline-block' %>
  <%= link_to 'Cancel', posts_path, class: 'btn btn-danger d-inline-block' %>
<% end %>

</div>
