<div class="card col-10 offset-1">
  <div class="row">
    <div class="col w-50 img-container">
      <%= image_tag @post.photo, class: 'img-fluid' %>
    </div>

    <div class="col w-50">
      <div class="post-header">
        <div class="row">
          <div class="col-6 bold text-left">
            <%= @post.caption %>
          </div>
          <div class="col-6 handle text-right">
            Uploaded by: <%= @post.user.name %>
          </div>
        </div>
      </div>

      <div class="bold post-actions text-right">
        <% if current_user && current_user == @post.user %>
          <%= link_to 'Edit', edit_post_path(@post) %>
          <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>

      <div class="comments text-left">
        <% @post.comments.each do |comment| %>
          <div class="comment">
            <span class="comment_handle">
              <%= comment.user.name %>:
            </span>

            <%= comment.message %>
          </div>
        <% end %>

        <br />

        <%= simple_form_for Comment.new, url: post_comments_path(@post) do |f| %>
          <%= f.input :message, label: false %>
          <%= f.submit 'Add comment', class: 'btn btn-green btn-half' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
