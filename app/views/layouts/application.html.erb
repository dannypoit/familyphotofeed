<!DOCTYPE html>
<html>
  <head>
    <title>familyphotofeed</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- <h5>Coming soon!</h5> -->

    <!-- -->

    <div class="top-nav">
      <div class="col-10 offset-1">
        <div class="row">
          <div class="col-4 brand">
            <%= link_to 'family', root_path, class: 'h1' %>
            <span class="brand-green"><%= link_to 'photo', root_path, class: 'h1' %></span>
            <%= link_to 'feed', root_path, class: 'h1' %>
          </div>
          <div class="col-4 add">
            <% if current_user %>
              Hello, <%= current_user.email %>.
            <% end %>
          </div>
          <div class="col-4 add">
            <% if current_user %>
              <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
            <% else %>
              <%= link_to "Sign In", new_user_session_path %>
              <%= link_to "Sign Up", new_user_registration_path %>
            <% end %>
          </div>
        </div>
      </div>
      <br class="clear-fix" />
    </div>

    <br/>

    <p>For the first time in forever, I feel fabulous!</p>

    <p>Uploaded by: Danny</p>

    <% if current_user %>
    <% else %>
      <%= link_to 'Login', new_user_session_path %>
    <% end %>

    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>

    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>

    <!-- -->

  </body>
</html>
