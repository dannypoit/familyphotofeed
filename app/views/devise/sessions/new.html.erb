<div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-4 offset-md-4 form login">
  <div class="text-center">
    <%= link_to 'family', root_path, class: 'h1 brand' %>
    <span class="brand-green"><%= link_to 'photo', root_path, class: 'h1 brand' %></span>
    <%= link_to 'feed', root_path, class: 'h1 brand' %>
  </div>

  <br /><br />

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Login", class: 'blue-btn' %>
    </div>
  <% end %>

  <br />

  <div class="form-actions text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
