<div class="form-reg py-5">
  <h2 class="mb-4">Forgot password</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="text-left">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: 'E-mail',
                  hint: 'Instructions to reset your password will be sent to your e-mail address',
                  input_html: { autocomplete: "email" } %>
    </div>

    <%= f.button :submit, 'Submit', class: 'btn btn-blue btn-300 my-4' %>
  <% end %>

  <%= link_to 'Cancel', :back, class: 'btn btn-outline-blue btn-sm mt-3' %>
</div>
